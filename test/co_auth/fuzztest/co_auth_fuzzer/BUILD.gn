import("//build/ohos.gni")
import("//build/test.gni")

ohos_fuzztest("CoAuthFuzzTest") {
  module_out_path = "user_iam/user_auth/co_auth"
  fuzz_config_file =
      "//base/user_iam/user_auth/test/co_auth/fuzztest/co_auth_fuzzer"

  cflags = [
    "-g",
    "-O0",
    "-Wno-unused-variable",
    "-fno-omit-frame-pointer",
  ]

  include_dirs = [
    "//base/user_iam/user_auth/frameworks/co_auth/inc",
    "//base/user_iam/user_auth/services/co_auth/inc",
    "//base/user_iam/user_auth/interfaces/inner_api/co_auth",
    "//base/user_iam/user_auth/common/logs/co_auth/inc",
    "//base/user_iam/user_auth/common/logs",
  ]

  sources = [ "co_auth_fuzzer.cpp" ]

  deps = [
    "//base/user_iam/user_auth/common:iam_test",
    "//base/user_iam/user_auth/frameworks/co_auth:coauth_framework",
    "//base/user_iam/user_auth/services:userauthservice",
  ]

  external_deps = [
    "eventhandler:libeventhandler",
    "hiviewdfx_hilog_native:libhilog",
    "ipc:ipc_core",
    "safwk:system_ability_fwk",
    "samgr_standard:samgr_proxy",
    "user_auth_device_driver_interface:libuser_auth_proxy_1.0",
    "utils_base:utils",
  ]
}
